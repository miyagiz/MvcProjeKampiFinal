@model EntitiyLayer.Concreate.Contact


@using (Html.BeginForm("GetMessageAdmin", "Contact", FormMethod.Post))
{
    if (!string.IsNullOrEmpty(ViewBag.successMessage))
    {
        <script type="text/javascript">
            alert('@ViewBag.successMessage');
        </script>
    }
    <div class="contact_grid_right">
        <form action="#" method="post">
            <div class="row contact_left_grid">
                <div class="col-md-6 con-left" data-aos="fade-up">
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.UserName, new { placeholder = "Adınız :", @class = "form-control" })
                        @*<input class="form-control" type="text" name="Name" placeholder="Adınız :" required="">*@
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.UserMail, new { placeholder = "Mail Adresiniz :", @class = "form-control" })
                        @*<input class="form-control" type="email" name="Email" placeholder="Mail Adresiniz :" required="">*@
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.Subject, new { placeholder = "Konu :", @class = "form-control" })
                        @*<input class="form-control" type="text" name="Subject" placeholder="Konu :" required="">*@
                    </div>
                </div>
                <div class="col-md-6 con-right" data-aos="fade-up">
                    <div class="form-group">
                        @Html.TextAreaFor(x => x.Message, new { placeholder = "Mesajınız :", @class = "form-control", @color = "white" })
                        @*<textarea id="textarea" placeholder="Mesajınız :" required=""></textarea>*@
                    </div>
                </div>
                <div class="sub-honey mx-auto mt-3">
                    <input class="form-control" type="submit" value="Gönder">
                </div>
            </div>
        </form>
    </div>
}
