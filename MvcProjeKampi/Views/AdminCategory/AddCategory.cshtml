@model EntitiyLayer.Concreate.Category
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("AddCategory", "AdminCategory", FormMethod.Post))
{
    <br />
    <div class="form-group" style="width:1200px;margin:auto;height:100%">
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CategoryName)
        <br />
        @Html.Label("Kategori Açıklaması Giriniz")
        @Html.TextAreaFor(m => m.CategoryDescription, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CategoryDescription)
        <br />
        <a href="/AdminCategory/Index/" class="btn btn-danger">Geri Dön</a>
        <button class="btn btn-info">Kaydet</button>
        <button type="button" class="btn btn-danger" id="btn1">SweetAlert</button>

    </div>
}

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>

<script>
    $('#btn1').click(function ()
    {
        swal("Başarılı!", "Kategorisi Başarı ile Eklenmiştir!", "success");
    })
    
</script>

