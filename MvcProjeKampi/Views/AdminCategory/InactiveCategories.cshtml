@using EntitiyLayer.Concreate
@model List<Category>

@{
    ViewBag.Title = "InactiveCategories";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<div style="width:1200px;margin:auto;height:100%">
    <h2>Kategori Listesi</h2>
    <table class="table table-bordered" style="text-align:center">
        <tr>
            <th style="text-align:center">#</th>
            <th style="text-align:center">Kategori Ad</th>
            <th style="text-align:center">Kategori Açıklama</th>
            <th style="text-align:center">Aktif Yap</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.CategoryID</th>
                <td>@item.CategoryName</td>
                <td>@item.CategoryDescription</td>
                <td><a href="/AdminCategory/DoActiveCategory/@item.CategoryID" class="btn btn-success">Aktif Yap</a></td>
            </tr>
        }
    </table>
    <a href="/AdminCategory/Index/" class="btn btn-primary">Aktif Kategoriler</a>
</div>

