@using EntitiyLayer.Concreate
@model List<Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />

<div style="width:1200px;margin:auto;height:100%">
    <h1>Kategori Listesi</h1>
    <a href="/AdminCategory/AddCategory" class="btn btn-primary">Yeni Kategori Ekle</a>
    <a href="/AdminCategory/InactiveCategories/" class="btn btn-danger" style="float:right">Pasif Kategoriler</a>
    <br />
    <br />
    <br />
    <table class="table table-bordered" style="text-align:center">
        <tr>
            <th style="text-align:center">#</th>
            <th style="text-align:center">Kategori Ad</th>
            <th style="text-align:center">Kategori Açıklama</th>
            <th style="text-align:center">Sil</th>
            <th style="text-align:center">Güncelle</th>
            <th style="text-align:center">Başlıklar</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.CategoryID</th>
                <td>@item.CategoryName</td>
                <td>@item.CategoryDescription</td>
                <td><a href="/AdminCategory/DeleteCategory/@item.CategoryID" class="btn btn-danger">Sil</a></td>
                <td><a href="/AdminCategory/EditCategory/@item.CategoryID" class="btn btn-warning">Güncelle</a></td>
                <td><a href="/Heading/HeadingsInCategories/@item.CategoryID" class="btn btn-info">Başlıklar</a></td>

            </tr>
        }
    </table>
</div>


