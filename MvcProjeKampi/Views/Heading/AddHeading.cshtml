@model EntitiyLayer.Concreate.Heading
@{
    ViewBag.Title = "AddHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div style="width:1200px;margin:auto;height:100%">
    <br />
    <h1>Yeni Başlık Ekleme</h1>
    <br />
    @using (Html.BeginForm("AddHeading", "Heading", FormMethod.Post))
    {
        <div class="form-group">
            @Html.Label("Başlık Adı")
            @Html.TextBoxFor(m => m.HeadingName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.HeadingName)
            <br />
            @Html.Label("Kategori")
            @Html.DropDownListFor(m => m.CategoryID, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
            <br />
            @Html.Label("Yazar")
            @Html.DropDownListFor(m => m.WriterID, (List<SelectListItem>)ViewBag.vlw, new { @class = "form-control" })
            <br />
            <a href="/Heading/Index/" class="btn btn-danger">Geri Dön</a>
            <button class="btn btn-success">Başlık Ekle</button>
        </div>
    }
</div>
