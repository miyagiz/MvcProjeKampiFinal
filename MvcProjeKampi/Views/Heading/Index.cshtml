@using EntitiyLayer.Concreate
@model PagedList.IPagedList<Heading>
@using PagedList
@using PagedList.Mvc

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ string color = "";}
@{ string status = "";}
@{ string btnStatus = "";}
@{ string btnClass = "";}

<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <br />
    <a href="/Heading/AddHeading/" class="btn btn-primary">Yeni Başlık Ekle</a>
    <a style="float:right" href="/Heading/InactiveHeadings/" class="btn btn-danger">Pasif Başlıklar</a>
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Başlık İşlemleri</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                                Başlık Adı
                            </th>
                            <th style="width: 10%">
                                Oluşturan Yazar
                            </th>
                            <th style="width: 10%">
                                Durum
                            </th>
                            <th style="width: 8%" class="text-center">
                                Kategori
                            </th>
                            <th style="width: 15%" class="text-center">
                                İşlemler
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.Category.CategoryName == "Tiyatro")
                            {
                                color = "badge badge-warning";
                            }
                            if (item.Category.CategoryName == "Spor")
                            {
                                color = "badge badge-success";
                            }
                            if (item.Category.CategoryName == "Yazılım")
                            {
                                color = "badge badge-secondary";
                            }
                            if (item.Category.CategoryName == "Seyehat")
                            {
                                color = "badge badge-info";
                            }
                            if (item.Category.CategoryName == "Dizi")
                            {
                                color = "badge badge-danger";
                            }
                            if (item.Category.CategoryName == "Film")
                            {
                                color = "badge badge-primary";
                            }
                            if (item.Category.CategoryName == "Kitap")
                            {
                                color = "badge badge-dark";
                            }
                            if (item.HeadingStatus == true)
                            {
                                status = "Aktif";
                                btnStatus = "Pasif Yap";
                                btnClass = "btn btn-danger btn-sm";
                            }
                            else
                            {
                                status = "Pasif";
                                btnStatus = "Aktif Yap";
                                btnClass = "btn btn-success btn-sm";
                            }

                            <tr>
                                <td>
                                    @item.HeadingID
                                </td>
                                <td>
                                    <a>
                                        @item.HeadingName
                                    </a>
                                    <br />
                                    <small>
                                        @(((DateTime)item.HeadingDate).ToString("dd MMM yyy"))
                                    </small>
                                </td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <a href="/Content/ContentByWriter/@item.WriterID">
                                                @item.Writer.WriterName @item.Writer.WriterSurname
                                            </a>
                                        </li>
                                    </ul>
                                </td>
                                <td>@status</td>
                                <td class="project-state">
                                    <span class="@color">@item.Category.CategoryName</span>
                                </td>
                                <td class="project-actions text-center">
                                    <a class="btn btn-primary btn-sm" href="/Content/ContentByHeading/@item.HeadingID">
                                        <i class="fas fa-folder">
                                        </i>
                                        İçerikler
                                    </a>
                                    <a class="btn btn-info btn-sm" href="/Heading/EditHeading/@item.HeadingID">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                    <a class="@btnClass" href="/Heading/DeleteHeading/@item.HeadingID">
                                        <i class="fas fa-trash">
                                        </i>
                                        @btnStatus
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div style="text-align:center">
                @Html.PagedListPager((IPagedList)Model, p => Url.Action("Index", new { p }))
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
</body>
</html>
<link href="~/Content/PagedList.css" rel="stylesheet" />

